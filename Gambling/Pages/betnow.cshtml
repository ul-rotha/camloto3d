        <tr>
            <td>
                <div class="div-total">សរុប: <span class="span-total" id="span_totalbetamount"></span></div>
            </td>
            <td>
            </td>
            <td>
                <div style="text-align:right;">
                <span id="btnSubmit"​ style="width: 130px;text-align:center;float: right;" class="action-button active" onclick="submit()">បញ្ជូន</span>
                <span id="btnDelete"​ style="width: 100px;text-align:center;float: right;" class="action-button" onclick="clear_betting()">លុប</span>
                </div>
            </td>
        </tr>
    </table>
